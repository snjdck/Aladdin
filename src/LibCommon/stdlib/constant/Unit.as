package stdlib.constant
{
	final public class Unit
	{
		static public const DEGREE:Number = 180 / Math.PI;
		static public const RADIAN:Number = Math.PI / 180;
		
		/** 1/20个像素 */
		static public const TWIP:Number = 0.05;
		
		static public const KB:Number = 1 / (1 << 10);
		static public const MB:Number = 1 / (1 << 20);
		static public const GB:Number = 1 / (1 << 30);
		static public const TB:Number = 1 / (1 << 40);
		static public const PB:Number = 1 / (1 << 50);
		
		static public const G:Number = 9.8;
	}
}